# Editorconfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = crlf
insert_final_newline = true
continuation_indent_size = 8
trim_trailing_whitespace = true
max_line_length = 120

[*.java]
indent_style = space
indent_size = 4

[*.{xml, yml}]
indent_style = space
indent_size = 2

[*.{md, txt}]
max_line_length = 80

[*.bat]
end_of_line = crlf
